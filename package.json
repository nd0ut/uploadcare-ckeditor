{
  "name": "uploadcare-ckeditor",
  "version": "2.1.5",
  "description": "This is a plugin for CKEditor 4 to work with Uploadcare.",
  "scripts": {
    "dev": "rollup -c -w",
    "serve": "serve",
    "deploy:demo": "node scripts/deploy-demo.js",
    "deploy:release": "node scripts/deploy-release.js",
    "build": "rimraf dist && rollup -c && npm run assets",
    "release": "release-it",
    "assets": "cd dist && find . -type d -maxdepth 1 -mindepth 1 -exec zip -D -r {}.zip {} \\; -exec tar -czvf {}.tar.gz {} \\;"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uploadcare/uploadcare-ckeditor.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uploadcare/uploadcare-ckeditor/issues"
  },
  "homepage": "https://github.com/uploadcare/uploadcare-ckeditor#readme",
  "devDependencies": {
    "gh-pages": "^1.1.0",
    "release-it": "^7.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.2",
    "rollup-plugin-cp": "^0.1.3",
    "rollup-plugin-jscc": "^0.3.3",
    "rollup-plugin-license": "^0.6.0",
    "serve": "^6.5.6"
  }
}
